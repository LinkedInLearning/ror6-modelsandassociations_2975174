<%= error_messages_for(f.object) %>

<table summary="User form fields">
  <tr>
    <th>First Name</th>
    <td><%= f.text_field(:first_name) %></td>
  </tr>
  <tr>
    <th>Last Name</th>
    <td><%= f.text_field(:last_name) %></td>
  </tr>
  <tr>
    <th>Email</th>
    <td><%= f.text_field(:email) %></td>
  </tr>
  <tr>
    <th>Departments</th>
  	<td>
  		<% collection = Department.all %>
  		<%= f.collection_check_boxes(:department_ids, collection, :id, :name) %>
  	</td>
  </tr>
</table>
